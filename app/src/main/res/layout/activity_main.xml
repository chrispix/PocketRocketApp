<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:text="\nRed\n\n"
        android:id="@+id/redButton"
        android:layout_weight=".2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:text="\nGreen\n\n"
        android:id="@+id/greenButton"
        android:layout_weight=".2"
        android:layout_toRightOf="@+id/redButton" />

    <Button
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:text="\nBlue\n\n"
        android:id="@+id/blueButton"
        android:layout_weight=".2"
        android:layout_toRightOf="@+id/greenButton" />

    <Button
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:text="\nOrange\n\n"
        android:id="@+id/orangeButton"
        android:layout_weight=".2"
        android:layout_toRightOf="@+id/blueButton" />

    <Button
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:text="\nYellow\n\n"
        android:id="@+id/yellowButton"
        android:layout_weight=".2"
        android:layout_toRightOf="@+id/orangeButton" />

    <Button
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:text="\nPurple\n\n"
        android:id="@+id/purpleButton"
        android:layout_weight=".2"
        android:layout_toRightOf="@+id/yellowButton" />


    <Button
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="\nRecord\n\n"
        android:id="@+id/recordButton"
        android:layout_weight=".2"
        android:layout_below="@+id/redButton" />

    <Button
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="\nStop\n\n"
        android:id="@+id/stopButton"
        android:layout_weight=".2"
        android:layout_below="@+id/recordButton" />

    <Button
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="\nPlay\n\n"
        android:id="@+id/playButton"
        android:layout_weight=".2"
        android:layout_below="@+id/stopButton" />


    <Button
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:text="\nReset\n\n"
        android:id="@+id/resetButton"
        android:layout_weight=".2"
        android:layout_below="@+id/playButton" />
</RelativeLayout>
